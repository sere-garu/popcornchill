<div class="signup_container">
  <h2>Create an Event</h2>

  <%= simple_form_for @event do |f| %>
    <%= f.error_notification %>
    <div class="signup">
      <div class="signup_fields">
        <div class="form-inputs">
          <%= f.input :date,
                      required: true %>
          <%= f.input :address,
                      required: true,
                      autofocus: true,
                      as: :search,
                      placeholder: 'Where is your movie night?' %>
        </div>

        <div class="form-group">
          <label class="form-control-label">Add friends</label>
          <div class="d-flex flex-row justify-content-between align-items-center", style="display: block !important">
            <input type="email" name="emails[]"
                   class="form-control mx-1"
                   placeholder="friend@email.com">
            <input type="email" name="emails[]"
                   class="form-control mx-1"
                   placeholder="friend@email.com">
            <input type="email" name="emails[]"
                   class="form-control mx-1"
                   placeholder="friend@email.com">
          </div>
        </div>

        <div>
          <%= f.button :submit, "Create Event", class: "button_pc"%>
        </div>
      </div>
    </div>

  <% end %>
</div>

