<h3>Movies for <%= @event.name %></h3>

<% unless @movies.nil? %>
  <% @movies.each do |movie| %>
    <% next if @event.user_already_swiped(current_user, movie) %>
    <div>
      <%= link_to 'Nope', event_results_path(
        @event,
        preference: 'nope',
        movie_id: movie.id,
        user_id: current_user,
        event_id: @event.id
      ), method: :post, class: 'text-danger' %>
      <%#= render 'swipe', text: 'nope', event: @event, movie: movie, color: 'text-danger' %>

      <%#= movie.trakt_payload['title'] unless movie.result? current_user %>
      <%= movie.trakt_payload['title'] %>

      <%= link_to 'Yep', event_results_path(
        @event,
        preference: 'yep',
        movie_id: movie.id,
        user_id: current_user,
        event_id: @event.id
      ), method: :post, class: 'text-success' %>
    </div>
  <% end %>
<% end %>


<% if @event.everyone_swiped? %>
Everyone swiped, results:

<br>

  <% @event.results.prefered.each do |result| %>
  movie: <%= result.movie.trakt_payload["title"] %>

  <br>
  <% end %>
<% end %>
