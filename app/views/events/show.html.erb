<h3>Movies for <%= @event.name %></h3>

<% if @movies.any? %>
  <% @movies.each do |movie| %>
    <% next if @event.user_already_swiped(current_user, movie) %>
    <div>
      <%= link_to 'Nope', event_results_path(
        @event,
        preference: 'nope',
        movie_id: movie.id,
        user_id: current_user,
        event_id: @event.id
      ), method: :post, class: 'text-danger' %>
      <%#= render 'swipe', text: 'nope', event: @event, movie: movie, color: 'text-danger' %>

      <%= movie.id %>

      <%= movie.trakt_payload['title'] %>

      <%= link_to 'Yep', event_results_path(
        @event,
        preference: 'yep',
        movie_id: movie.id,
        user_id: current_user,
        event_id: @event.id
      ), method: :post, class: 'text-success' %>
    </div>
  <% end %>
<% else %>
  <h3 style="text-align: center">No matches!</h3>
<% end %>

<% if @event.everyone_swiped?(@movies) %>
  <% controller.redirect_to event_results_path(@event) %>
<% end %>


